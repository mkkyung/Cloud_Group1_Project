<mvc:View
	controllerName="Cloud_Group1_ProjectCloud_Group1_Project.controller.products.List"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" height="100%" xmlns="sap.m" xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	<App id="apps">
		<f:DynamicPage id="dynamicPageId"
			toggleHeaderOnTitleClick="false">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="Products" />
					</f:heading>
				</f:DynamicPageTitle>
			</f:title>

			<!-- DynamicPage Content -->
			<f:content>
				<Table id="productsTable" inset="false"
					class="sapFDynamicPageAlignContent" width="auto">
					<headerToolbar>
						<OverflowToolbar>
							<ComboBox>
							</ComboBox>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="대분류" />
						</Column>
						<Column>
							<Text text="중분류" />
						</Column>
						<Column width="12em">
							<Text text="상품코드" />
						</Column>
						<Column>
							<Text text="상품명" />
						</Column>						
						<Column>
							<Text text="표준금액" />
						</Column>
						<Column>
							<Text text="제조사"/>
						</Column>
						<Column>
							<Text text="출시일" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation"
							press="handleMasterPress">
							<cells>
								<Text text="OA가구" />
								<Text text="책상" />
								<Text text="AB05001" />
								<Text text="OA-W16" />						
								<ObjectIdentifier title="1,900,000" text="원" />									
								<Text text="삼성전자" />
								<Text text="2019.03.07" />							
							</cells>
						</ColumnListItem>
						<ColumnListItem type="Navigation"
							press="handleMasterPress">
							<cells>
								<Text text="OA가구" />
								<Text text="책상" />
								<Text text="AB05001" />
								<Text text="OA-W16" />						
								<ObjectIdentifier title="1,900,000" text="KRW" />									
								<Text text="삼성전자" />
								<Text text="2019.03.07" />							
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>

			<!-- DynamicPage Footer -->
			<f:footer>
				<OverflowToolbar>
					<ToolbarSpacer />
					<Button type="Accept" text="Accept" />
					<Button type="Reject" text="Reject" />
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
	</App>
</mvc:View>