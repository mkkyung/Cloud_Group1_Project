<mvc:View displayBlock="true"
	controllerName="Cloud_Group1_ProjectCloud_Group1_Project.controller.products.Detail"
	height="100%" xmlns="sap.uxap" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" xmlns:m="sap.m" xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form">

	<ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true" alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false" headerContentPinnable="true"
		isChildPage="true" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{products>Name}" wrapping="true"
						class="sapUiSmallMarginEnd" />
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox wrap="Wrap" fitContainer="true"
						alignItems="Center">
						<m:FlexBox wrap="NoWrap" fitContainer="true"
							alignItems="Center" class="sapUiTinyMarginEnd">
							<f:Avatar src="" displaySize="S" displayShape="Square" />
							<m:Title text="OA-W16" wrapping="true"
								class="sapUiTinyMarginEnd" />
						</m:FlexBox>
					</m:FlexBox>
				</snappedHeading>

				<navigationActions>
					<m:OverflowToolbarButton type="Transparent"
						icon="sap-icon://decline" press="handleClose"
						tooltip="Close column"
						visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }" />
				</navigationActions>

				<actions>
					<m:Button id="update" text="수정" type="Emphasized"
						press="update" visible="{visible>/Visible}" />
					<m:Button id="enter" text="완료" type="Transparent"
						visible="{enter>/Enter}" press="enter" />
					<m:Button text="삭제" type="Transparent" />
					<m:Button icon="sap-icon://action" type="Transparent" />
				</actions>

			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true"
				alignItems="Stretch">
				<f:Avatar
					src="../../../../../../../{products>ProductPicUrl}" displaySize="L"
					displayShape="Square" class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="대분류" />
					<m:Text text="OA가구" />
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="중분류" />
					<m:Text text="책상" />
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="상품명" />
					<m:Text text="OA-W16" />
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection title="Information">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm maxContainerCols="2"
								editable="false" layout="ResponsiveGridLayout" labelSpanL="12"
								labelSpanM="12" emptySpanL="0" emptySpanM="0" columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="상품코드" />
									<m:Text text="AB05001" />
									<m:Label text="상품명" />
									<m:Input value="OA-W16" editable="{edit>/Edit}"/>
									<m:Label text="표준금액" />
									<m:Input value="1,900,000 원" editable="{edit>/Edit}"/>
									<m:Label text="제조사" />
									<m:Input value="삼성전자" editable="{edit>/Edit}"/>
									<m:Label text="출시일" />
									<m:DatePicker value="2019.03.07" editable="{edit>/Edit}" />
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Suppliers">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table id="suppliersTable"
								items="{path : 'products>/ProductCollectionStats/Filters/1/values'}">
								<m:columns>
									<m:Column />
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation"
										press="handleItemPress">
										<m:cells>
											<m:ObjectIdentifier text="{products>text}" />
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>