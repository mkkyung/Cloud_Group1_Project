						</fb:FilterItem>	
						<fb:FilterItem name="F" label="종료일자">
							<fb:control>
								<DatePicker id="F" value="{
									path:'/dateValue', 
									type:'sap.ui.model.type.Date', 
									formatOptions: { 
										style: 'medium', 
										strictParsing: true
										}
									}"
									class="sapUiSmallMarginBottom"/>
							</fb:control>				
						</fb:FilterItem>			
												
