<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
	controllerName="Cloud_Group1_ProjectCloud_Group1_Project.controller.estimate.View2"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:fb="sap.ui.comp.filterbar" xmlns:f="sap.f"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<App id="apps">
		<Page title="view2 : 견적상세" showNavButton="true"
			navButtonPress="goBack">
			<Button text="button" press="getData" />
			<headerContent text="view2">
				<Button text="next" id="button" type="Reject" press=".onShow" />
			</headerContent>

			<f:DynamicPage id="dynamicPageId"
				headerExpanded="{/headerExpanded}">
				<f:title>
					<f:DynamicPageTitle>
					</f:DynamicPageTitle>
				</f:title>
				<f:header>
					<f:DynamicPageHeader pinnable="false"
						destroyContent="false">	 <!-- pinnable 고정여부 -->
						<f:content>

							<IconTabBar id="idIconTabBar"
								select="handleIconTabBarSelect"
								class="sapUiResponsiveContentPadding">
								<items>
									<IconTabFilter showAll="true" text="전체조회"
										key="All" />
									<IconTabSeparator />
									<IconTabFilter icon="sap-icon://begin"
										iconColor="Positive" text="유효" key="ok" />
									<IconTabFilter icon="sap-icon://inventory"
										iconColor="Negative" text="비유효" key="nob" />
								</items>
							</IconTabBar>
							<fb:FilterBar reset="onReset" search="onSearch"
								showRestoreButton="true" showClearButton="true">

								<fb:filterItems>
								
									<fb:FilterItem name="A" label="대분류"
										labelTooltip="Tooltip Example" mandatory="true">
										<fb:control>
											<ComboBox type="Text">
												<items>
													<core:Item key="001" text="EMEA" />
												</items>
											</ComboBox>
										</fb:control>
									</fb:FilterItem>
									
									<fb:FilterItem name="B" label="중분류"
										labelTooltip="Tooltip Example" mandatory="true">
										<fb:control>
											<ComboBox type="Text">
												<items>
													<core:Item key="002" text="EMEA" />
												</items>
											</ComboBox>
										</fb:control>
									</fb:FilterItem>
									
									<fb:FilterItem name="C" label="제품명 및 코드"
										labelTooltip="Tooltip Example" mandatory="true">
										<fb:control>
											<ComboBox showSecondaryValues="true"
												items="{
															path: '/CountriesCollection', 
															sorter: { path: 'text' } 
 														}"> 
												<core:ListItem key="{key}" text="{text}"
													additionalText="{key}" />
											</ComboBox>
										</fb:control>
									</fb:FilterItem>
									
									<fb:FilterItem name="D" label="공급업체명"
											labelTooltip="Tooltip Example" mandatory="true">
										<fb:control>
											<ComboBox type="Text">
												<items>
													<core:Item key="003" text="EMEA" />
												</items>
											</ComboBox>
										</fb:control>
									</fb:FilterItem>
									
									<fb:FilterItem name="E" label="공급업체 코드"
											labelTooltip="Tooltip Example" mandatory="true">
										<fb:control>
											<ComboBox type="Text">
												<items>
													<core:Item key="004" text="EMEA" />
												</items>
											</ComboBox>
										</fb:control>
									</fb:FilterItem>
									

									<fb:FilterItem name="F" label="견적일자">
										<fb:control>
											<DatePicker
														id="C"
												value="{
												 path:'/dateValue', 
												 type:'sap.ui.model.type.Date', 
												 formatOptions: { 
												 style: 'medium', 
												 strictParsing: true
												 } 
												 }" 
												class="sapUiSmallMarginBottom" />
										</fb:control>
									</fb:FilterItem>
								
								
									<fb:FilterItem name="G" label="제조사"
											labelTooltip="Tooltip Example" >
										<fb:control>
											<ComboBox type="Text">
												<items>
													<core:Item key="005" text="EMEA" />
												</items>
											</ComboBox>
										</fb:control>
									</fb:FilterItem>

							</fb:filterItems>
							</fb:FilterBar>
						</f:content>
					</f:DynamicPageHeader>
				</f:header>
				<f:content>
					<Table items="{estlist>/data}" id="esttable" inset="false">
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="견적번호" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="유효성여부" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="대분류" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="중분류" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="제품명" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="공급업체명" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="공급업체코드" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="수량" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="단가" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="총금액" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="견적일" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="금액단위" />
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation" vAlign="Middle"
								press=".onPress">
								<cells>
									<!-- <ObjectIdentifier title="{/data}" /> text="{ProductId}" -->
									<Text text="{estlist>EstNo}" />
									<Text text="{estlist>EstAva}" />
									<Text text="{estlist>EstCat1}" />
									<Text text="{estlist>EstCat2}" />
									<Text text="{estlist>EstCat3}" />
									<Text text="{estlist>EstVname}" />
									<Text text="{estlist>EstVcode}" />
									<Text text="{estlist>EstAmt}" />
									<Text text="{estlist>EstPrice}" />
									<Text text="{estlist>EstTotal}" />
									<Text text="{estlist>EstDate}" />
									<Text text="{estlist>EstCuky}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</f:content>
			</f:DynamicPage>
		</Page>
	</App>
</mvc:View>